<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/collection_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
   			android:marqueeRepeatLimit="marquee_forever"
            android:text="名称："
            android:maxEms="15"
            android:singleLine="true"
            android:textColor="@color/light_blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/collection_text_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
   			android:marqueeRepeatLimit="marquee_forever"
            android:text="地址："
            android:maxEms="20"
            android:singleLine="true"
            android:textColor="@color/light_blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/collection_text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
   			android:marqueeRepeatLimit="marquee_forever"
            android:text="电话："
            android:maxEms="20"
            android:singleLine="true"
            android:textColor="@color/light_blue"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/collection_button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_image_btn"
            android:text="删除" />

        <Button
            android:id="@+id/collection_button_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_image_btn"
            android:text="联系" />

        <Button
            android:id="@+id/collection_button_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_image_btn"
            android:text="导航" />
    </LinearLayout>

</LinearLayout>